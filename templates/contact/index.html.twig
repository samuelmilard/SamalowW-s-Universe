{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

 <div class="title_contact">Contact Me Here</div>

 <div class="header_home3">


{% if app.user %}
         <div style="color:#FFFFFF; font-family: 'Varela Round', sans-serif;" class="mb-3">
            I'll try to answer you fast <span style="color:#CCFF00;"> {{ app.user.name }}</span>
        </div>

         <div class="contact-clean">
        {{form_start(form)}}
            <div class="form-group">{{form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}})}}<small style="color:#CCFF00 !important;" class="form-text text-danger">Please enter a correct email address.</small></div>
            <div class="form-group">{{form_widget(form.pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Pseudo'}})}}</div>
            <div class="form-group">{{form_widget(form.country, {'attr': {'class': 'form-control', 'placeholder': 'Country'}})}}</div>
            <hr style="height: 3px; background-color:#CCFF00; width: 80%; border:none; margin-top: 10%; text-align:center;">
            <div class="form-group">{{form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Message'}})}}</div>
            <div class="form-group"><button class="btn btn-primary send" type="submit">Send !</button></div>
        {{form_end(form)}}

    </div>
       {% else %} 

        <div class="fluo1"> 
        <p class="fluo2">*You need to have a valid <a style="text-decoration:underline; color: #363636;" href="{{ path ('app_login') }}" >Profile</a> to send an E-Mail.</p>
        
        </div>
        <div class="iconcross"><i class="fas fa-times-circle fa-10x"></i></div>

        
    {% endif %}


</div>

 </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Profile Page{% endblock %}

{% block body %}

<div class="connect">

<p class="title_space2"> Welcome dear Friend </p>

</div>

<div style="background-image:url(../../img/ScreenShots/enzzo1.jpg); filter: grayscale(0%); height:700px;" class="contact-clean">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div style="color:#FFFFFF; font-family: 'Varela Round', sans-serif;" class="mb-3">
            You are logged in as {{ app.user.username }}, <a style="color:#CCFF00; font-family: 'Varela Round', sans-serif;" href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 style="color:#CCFF00; font-family: 'Varela Round', sans-serif;" class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <p style="color:#FFFFFF; font-family: 'Varela Round', sans-serif;" class="asterix1">*You need to have a Profile for sign in.</p>
    <label style="color:#FFFFFF; font-family: 'Varela Round', sans-serif;" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label style="color:#FFFFFF; font-family: 'Varela Round', sans-serif;" for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn_forum2" type="submit">
        Sign in
    </button>
</form>

</div>


{% endblock %}
